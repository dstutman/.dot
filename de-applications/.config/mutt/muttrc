set realname = "Daniel Avishai Stutman"

set folder = imaps://imap.migadu.com
set imap_user = "daniel@stutman.tech"
set imap_pass = `bw get password migadu.com`

set from = "daniel@stutman.tech"
set use_from = yes
set smtp_pass = $imap_pass
set smtp_url = smtps://$imap_user@smtp.migadu.com
set ssl_starttls = yes

set spoolfile=+INBOX
set imap_check_subscribed

set header_cache = ~/.cache/mutt/
set message_cachedir = ~/.cache/mutt/

unset imap_passive
set imap_keepalive = 300
set mail_check = 120

set record = +Sent

